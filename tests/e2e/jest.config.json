{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/_setupLogging.ts"],
  "testTimeout": 180000,
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.spec.json",
        "useESM": true
      }
    ]
  },
  "reporters": [
    [
      "jest-junit",
      {
        "outputDirectory": "reports",
        "outputName": "e2e-report.xml"
      }
    ],
    [
      "github-actions",
      {
        "silent": false
      }
    ],
    "summary"
  ]
}
