{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": false,
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom"
    ],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "typedocOptions": {
    "entryPoints": ["yajsapi"],
    "exclude": ["**/*.spec.ts","yajsapi/stats/*.ts"],
    "entryPointStrategy": "expand",
    "out": "docs",
    "sort": "static-first",
    "excludePrivate": true,
    "name": "JavaScript API reference",
    "categorizeByGroup": false,
    "excludeExternals": true,
    "excludeInternal": true
  },
  "exclude": ["dist", "node_modules", "examples", "tests", "cypress.config.ts"]
}


