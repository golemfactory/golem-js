{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "dom",
    ],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["cypress", "node"]
  },
  "typedocOptions": {
    "exclude": ["**/*.spec.ts"],
    "out": "docs"
  },
  "exclude": ["dist", "node_modules", "examples", "tests"]
}
