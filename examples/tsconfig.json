{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"]
}
