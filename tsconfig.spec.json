{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": false,
    "target": "es2018",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist", "node_modules", "examples", "cypress.config.ts"],
  "include": ["yajsapi/**/*.spec.ts", "tests/unit/**/*.test.ts", "tests/unit/**/*.spec.ts"]
}
